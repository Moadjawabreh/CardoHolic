@model FinalProject.Models.SecretCodeForProduct

@{
    Layout = "Admin";
}

@{
    ViewData["Title"] = "UpdateCode";
}
<form method="post" enctype="multipart/form-data">

    <div class="border shadow-lg m-4 p-3">

        <div class="row pb-2">
            <h2 class="text-primary">Update Code</h2>
            <hr />
            <div asp-validation-summary="All">
            </div>
        </div>

        <div class="row pb-2">

            <div class="col-6">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" type="text" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="col-6">
                <label asp-for="status" class="form-label"></label>
                <input asp-for="status" type="text" class="form-control" />
                <span asp-validation-for="status" class="text-danger"></span>
            </div>

            <div class="col-6">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(ViewBag.ProductsList,"ID","Name"))">
					<option  value="">Choose Category</option>
				</select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

        </div>
        <button type="submit" class="btn btn-primary m-2">Update Code</button>

        <a asp-action="Codes" class="btn btn-outline-secondary">Back to List</a>


    </div>
</form>







@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
